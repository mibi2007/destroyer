{
  "hosting": [
    {
      "site": "mibi-destroyer",
      "public": "build/web",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        },
        {
          "source": "/character/**",
          "destination": "/character/index.html"
        },
        {
          "source": "/rive-animation-test/**",
          "destination": "/rive-animation-test/aindex.html"
        }
      ]
    }
  ]
}
